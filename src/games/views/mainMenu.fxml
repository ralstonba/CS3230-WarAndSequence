<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<StackPane minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="games.views.MainMenuController">
   <children>
      <ImageView fitHeight="750.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="file:/../resources/images/mainMenu2.jpg" />
         </image>
      </ImageView>
      <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="20.0" />
      <AnchorPane prefHeight="200.0" prefWidth="200.0">
         <children>
            <VBox layoutX="14.0" layoutY="135.0" spacing="50.0" AnchorPane.leftAnchor="20.0">
               <children>
                  <Button fx:id="sequenceButton" mnemonicParsing="false" onAction="#handleSequenceButton" style="-fx-background-color: rgb(0,0,0,0);" text="Sequence" textFill="WHITE">
                     <font>
                        <Font size="36.0" />
                     </font>
                     <graphic>
                        <ImageView fitHeight="200.0" fitWidth="200.0">
                           <image>
                              <Image url="file:/../resources/images/IconCopy.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="warButton" graphicTextGap="0.0" mnemonicParsing="false" onAction="#handleWarButton" style="-fx-background-color: rgb(0,0,0,0);" text="War" textFill="WHITE">
                     <font>
                        <Font size="36.0" />
                     </font>
                     <graphic>
                        <ImageView fitHeight="200.0" fitWidth="200.0">
                           <image>
                              <Image url="file:/../resources/images/warImage.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </Button>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </children>
</StackPane>
